@import 'pos'
@import 'box'
@import 'border'
@import 'transition'

.App
  width 100%
  color #DDD
  font-family arial, sans-serif

  > .drop_zone
    height = 80px
    height height
    text-align center
    line-height height
    position relative
    background-color #822
    box-shadow inset 0 0 8px #322

    &:after
      size=10px
      content ''
      abspos size size size size
      border-radius 10px
      border 2px dashed rgba(#F88,.3)

  > .schedule_container
    margin-top 20px